<!DOCTYPE HTML>
<html>
   <head>
        <title>EVE</title>
        <link rel="stylesheet" href="/static/style.css">
        <script type="text/javascript" src="/static/ws.js"></script>
   </head>
   <body>
        <div class="content">
		<div class="chat-list">
			<div class="topBar">
			<div id="title">
				EVE - Datingbots
			</div>
			<div id="username">
				{{.User.Name}} (Logout)
			</div>
			<div id="newBot">
				<form method="post" action="/createBot">
                <input id="newBotButton" type="submit" value=""/>
			</div>
            </form></div>
			
        {{if .ActiveBot}}
            <div class="bot-list"><ul>
            {{range $bot := .Bots}}
                <li class="bot" id="{{if eq $.ActiveBot.ID $bot.ID}}bot-active{{end}}" botID="{{$bot.ID}}">
                    <a href="/?bot={{$bot.ID}}"><img src="http://via.placeholder.com/150x150"> {{$bot.Name}}</a>
                </li>
            {{end}}
        {{end}}
            </ul></div>
        </div>
        {{if .ActiveBot}}
        <div class="chat">
            <div class="topBar2">
			<img src="http://via.placeholder.com/150x150">
            <div id="botname">Bot: <b>{{.ActiveBot.Name}}</b></div>
			</div>
            <div id="log">
                {{range $msg := .Messages}}
                <p class="msg {{if eq $msg.Sender 1}}user{{else}}bot{{end}}">
                    {{$msg.Content}}
                        <span class="timestamp">{{time $msg.Timestamp}}</span>
                </p>
                {{end}}
            </div>
            <form id="form" autocomplete="off">
                <textarea id="msg" maxlength="200"></textarea>
                <input type="submit" value="" id="send"/>
            </form>
        </div>
		</div>
        {{end}}
   </body>
</html>